{
  "name": "account-center",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000 --host 0.0.0.0 --mode development",
    "preview": "vite preview",
    "test": "vite --port 3000 --host 0.0.0.0 --mode test",
    "build": "npx vite build --mode development",
    "open:android": "vite build --mode production && npx cap sync android && npx cap open android",
    "open:ios": "vite build --mode production && npx cap sync ios && npx cap open ios",
    "build:icons": "npx @capacitor/assets generate --iconBackgroundColor '#183E3B' --splashBackgroundColor '#183E3B'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:update": "cypress run --env updateSnapshots=true",
    "prettier": "npx prettier  .",
    "prettier:fix": "npx prettier --write",
    "eslint:fix": "eslint --fix",
    "typecheck": "tsc",
    "typecheck:staged": "tsc-files",
    "generate:translations": "node src/core/helpers/generate-languages.js",
    "lint": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@capacitor-firebase/messaging": "^7.1.0",
    "@capacitor/app": "^7.0.1",
    "@capacitor/core": "^7.2.0",
    "@capacitor/dialog": "^7.0.1",
    "@capacitor/preferences": "^7.0.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.0.1",
    "@ionic/pwa-elements": "^3.3.0",
    "@meshsdk/core": "^1.9.0-beta.43",
    "@mui/material": "^7.0.2",
    "@reduxjs/toolkit": "^2.7.0",
    "@stripe/stripe-js": "^7.3.0",
    "@tanstack/react-table": "^8.21.3",
    "@web3modal/ethereum": "^2.7.1",
    "@web3modal/wagmi": "^5.1.11",
    "axios": "^1.8.4",
    "country-flag-icons": "^1.5.18",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.0",
    "i18next-browser-languagedetector": "^8.0.4",
    "iso-country-currency": "^0.7.2",
    "js-base64": "^3.7.7",
    "js-cookie": "^3.0.5",
    "markdown-to-jsx": "^7.7.4",
    "moment": "^2.30.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-error-boundary": "^5.0.0",
    "react-google-recaptcha": "^3.1.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.55.0",
    "react-i18next": "^15.4.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.2",
    "react-select": "^5.10.1",
    "socket.io-client": "^4.8.1",
    "ssi-auth-lib": "^0.0.12",
    "viem": "^2.29.3",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-wasm": "^3.4.1",
    "vite-tsconfig-paths": "^5.1.4",
    "wagmi": "^2.15.3",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.2.0",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@swc/core": "^1.11.21",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-google-recaptcha": "^2.1.9",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "cypress": "^14.3.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-cypress": "^4.2.1",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "sass": "^1.86.3",
    "tailwindcss": "^3.4.7",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run typecheck && npm run build"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run eslint:fix",
      "npm run prettier:fix"
    ],
    "*.{css,scss,md}": "npm run prettier:fix",
    "src/core/translation/locales/en/**/*.json": [
      "npm run generate:translations"
    ]
  }
}
